<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top"
    android:scaleType="fitCenter"
    android:background="@drawable/main_im">
    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="AGROWW"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/d_green"
        android:textSize="60dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MORE GROWW THE AGROWW"
        android:textColor="@color/black"
        android:fontFamily="serif-monospace"
        android:textSize="26dp"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/tv2"
        android:layout_below="@+id/tv"
        />

    <TextView
        android:id="@+id/ve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv2"
        android:layout_marginTop="600dp"
        android:layout_marginRight="70dp"
        android:text="Version 1.13.26"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  All@ Right Reserved by AGROWW PVT.LTD"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:textStyle="bold"
        android:layout_gravity=""
        android:layout_below="@+id/ve"
        />

</RelativeLayout>