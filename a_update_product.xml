<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Product Details"
        android:textSize="40dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:fontFamily="serif-monospace"
        android:textColor="@color/black"/>
    <EditText
        android:id="@+id/u_pid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:drawableStart="@drawable/user_black"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"
        android:background="@drawable/widget" />
    <EditText
        android:id="@+id/u_pname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_below="@+id/id1"
        android:drawableStart="@drawable/cart_an"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:background="@drawable/widget" />
    <EditText
        android:id="@+id/u_quantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_below="@+id/id1"
        android:drawableStart="@drawable/wallet"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:background="@drawable/widget" />
    <EditText
        android:id="@+id/u_pimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:drawableStart="@drawable/img"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:background="@drawable/widget" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
    <TextView
        android:id="@+id/ru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ruppe"
        android:textSize="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>
    <EditText
        android:id="@+id/u_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/ru"
        android:textColor="@color/black"
        android:background="@drawable/widget" />
    </RelativeLayout>
    <EditText
    android:id="@+id/u_desc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="30dp"
    android:textColor="@color/black"
        android:drawableStart="@drawable/description"
        android:layout_marginTop="20dp"
    android:background="@drawable/widget" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttons"
            android:text="UPDATE"
            android:textSize="26dp"
            android:letterSpacing="0.2"
            android:id="@+id/update_product"/>
</TableLayout>