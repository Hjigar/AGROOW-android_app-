<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back11"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:background="@drawable/ring2"
        android:layout_height="126dp"
        android:src="@drawable/ic_baseline_account_circle_24" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="50dp"
        android:layout_marginBottom="50dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:fontFamily="serif-monospace"
        android:textColor="@color/white"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_back"
            android:layout_margin="10dp"
            android:textColorHint="@color/black"
            android:drawableStart="@drawable/user_black"
            android:padding="15dp"
            android:layout_marginTop="30dp"
            android:hint="Name"
            android:inputType="textPersonName"
            android:id="@+id/name"/>


        <EditText
            android:id="@+id/phno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_back"
            android:textColorHint="@color/black"
            android:layout_margin="10dp"
            android:drawableStart="@drawable/phone_an"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:inputType="phone"
            android:hint="Phone no "/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_back"
            android:textColorHint="@color/black"
            android:layout_margin="10dp"
            android:drawableStart="@drawable/email"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:id="@+id/email"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_back"
            android:textColorHint="@color/black"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:drawableStart="@drawable/kay"
            android:inputType="textPassword"
            android:hint="Password "
            android:id="@+id/pass"/>
    <Button
        android:id="@+id/reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:textSize="20dp"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:letterSpacing="0.5"
        android:text="AGROWW" />
</TableLayout>
