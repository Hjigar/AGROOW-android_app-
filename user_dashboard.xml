<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/profile"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/profile"
        android:text="Good Day,"
        android:textSize="26dp"
        android:textColor="@color/d_green"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/tv1"
        android:text="âœ”"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />
    <!--SERVIICE-->
    <TextView
        android:id="@+id/service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="SERVICE OF AGROWW"
        android:textColor="@color/d_green"
        android:textSize="26dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/license"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@+id/service"
        android:layout_marginLeft="10dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/license_cr" />

    <TextView
        android:id="@+id/tlicense"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/license"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="License"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/subsidy"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@+id/service"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/license"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/moneyhand" />

    <TextView
        android:id="@+id/tsubsidy"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/subsidy"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/license"
        android:gravity="center"
        android:text="Subsidy"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/products"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tlicense"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/cart5" />

    <TextView
        android:id="@+id/tproducts"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/products"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="Products"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/order"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@+id/tsubsidy"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/products"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/order_1" />

    <TextView
        android:id="@+id/torder"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/order"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/tproducts"
        android:gravity="center"
        android:text="Orders"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />



    <ImageButton
        android:id="@+id/reports"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@+id/torder"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/aboute"
        android:layout_marginRight="10dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/reports1" />

    <TextView
        android:id="@+id/treport"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/reports"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/taboute"
        android:gravity="center"
        android:text="Reports"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/aboute"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@+id/torder"
        android:layout_marginLeft="10dp"
        android:background="@color/white"
        android:scaleType="fitCenter"
        android:src="@drawable/aboute_us" />

    <TextView
        android:id="@+id/taboute"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_below="@+id/aboute"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="Aboute Us"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

</RelativeLayout>
