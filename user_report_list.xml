<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_marginLeft="10dp"
        android:text="-------------------------------------------"
        android:layout_marginTop="15dp"
        android:id="@+id/line1"/>
    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/line1"
        android:src="@drawable/main_im"/>

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/logo"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center"
        android:layout_below="@+id/line1"
        android:text="Agroww    👨‍🌾🌾‍"
        android:textColor="@color/d_green"
        android:textSize="40dp"
        android:textStyle="bold" />

   <!-- <TextView
        android:id="@+id/uid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:drawableStart="@drawable/user_black"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />-->
    <TextView
        android:id="@+id/buy_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="190dp"
        android:drawableStart="@drawable/date"
        android:textColor="@color/black"
        android:textSize="30dp" />
    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@+id/buy_date"
        android:drawableStart="@drawable/phone_an"
        android:textSize="30dp"
        android:layout_margin="10dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:drawableStart="@drawable/home_an"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/pname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:drawableStart="@drawable/cart_an"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/ru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pname"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/ruppe"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pname"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/ru"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/qt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pname"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/quantity"
        android:text="/qty  "
        android:textColor="@color/black"
        android:textSize="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:layout_below="@+id/pname"
        android:layout_toRightOf="@+id/price"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:id="@+id/quantity"/>

    <TextView
        android:id="@+id/to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="Total:-"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/to"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30dp" />
    <TextView
        android:id="@+id/ru2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quantity"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/total"
        android:text="@string/ruppe"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total"
        android:layout_marginTop="-9dp"
        android:layout_marginLeft="10dp"
        android:text="-------------------------------------------"
        android:textColor="@color/black"
        android:textSize="30dp" />

