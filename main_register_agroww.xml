<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTintMode="src_over"
    android:background="@drawable/tractor">

    <TextView
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:text="Register Here for  All Candidates:"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/user_login"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@+id/t1"
        android:src="@drawable/kisan" />

    <TextView
        android:id="@+id/ut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_login"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:text="User Register"
        android:textColor="@color/white"
        android:textSize="45dp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="----------------"
        android:layout_below="@+id/ut"
        android:textSize="40dp"
        android:gravity="center"
        android:id="@+id/line"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:text="Other Enntitys Register coming soon"
        android:textColor="@color/red"
        android:textSize="40dp"
        android:textStyle="bold" />
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/other">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="*Goverment Register"
            android:layout_below="@+id/admin_login"
            android:textSize="33dp"
            android:textStyle="bold"
            android:fontFamily="serif-monospace"
            android:textColor="@color/black"/>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*Goverment Officer Register"
        android:layout_below="@+id/admin_login"
        android:textSize="35dp"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:textColor="@color/black"/>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="*Yard Businessmen  Register"
        android:layout_below="@+id/admin_login"
        android:textSize="35dp"
        android:textStyle="bold"
        android:fontFamily="serif-monospace"
        android:textColor="@color/black"/>


    </TableLayout>


</RelativeLayout>
</ScrollView>

