<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kisan">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="APPLY FOR SUBSIDY"
        android:fontFamily="serif-monospace"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:gravity="center"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="*NOTE:  WHEN  APPLYING SUBSIDY SO FIRST YOU HAVING FARMER FARM IMAGES  !!!"
        android:textCursorDrawable="@drawable/es"
        android:textColor="@color/red"
        android:layout_below="@+id/logo"
        android:textSize="26dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/widget"
        android:layout_margin="10dp"
        android:drawableStart="@drawable/user_black"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:inputType="phone"
        android:hint="YOUR USER ID"
        android:id="@+id/uid"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:background="@drawable/widget"
        android:layout_margin="10dp"
        android:drawableStart="@drawable/phone_an"
        android:padding="10dp"
        android:textColor="@color/black"
        android:inputType="phone"
        android:textColorHint="@color/black"
        android:hint="YOUR PHONE NUMBER"
        android:id="@+id/phone"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/widget"
            android:layout_margin="10dp"
            android:drawableStart="@drawable/img"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:inputType="textUri"
            android:hint="UPLOAD FARM IMAGE"
            android:id="@+id/farm_img"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/widget"
            android:layout_margin="10dp"
            android:drawableStart="@drawable/img"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:padding="10dp"
            android:hint="UPLOAD CROP IMAGE"
            android:inputType="textUri"
            android:layout_marginTop="10dp"
            android:id="@+id/crop_img"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/widget"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:drawableStart="@drawable/home_an"
        android:textColorHint="@color/black"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:hint="FARM ADDRESS"
        android:inputType="textPostalAddress"
        android:id="@+id/farm_add"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/widget"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/wallet"
            android:textColorHint="@color/black"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:inputType="number"
            android:hint="SUBSIDY AMMOUNT"
            android:id="@+id/subsidy_amo"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/widget"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/description"
            android:textColorHint="@color/black"
            android:hint="DESCRIPTION"
            android:padding="10dp"
            android:inputType="textMultiLine"
            android:layout_marginTop="10dp"
            android:id="@+id/despicstion"/>

    <Button
        android:id="@+id/apply_subsidy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/buttons"
        android:letterSpacing="0.8"
        android:textSize="20dp"
        android:text="AGROWW" />
</TableLayout>
