<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">
    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="ðŸ’¸Payment GateWay"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="39dp"
        />

    <TextView
        android:id="@+id/uname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:layout_marginTop="10dp"
        android:text="name"
        android:textColor="@color/black"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uname"
        android:layout_marginTop="10dp"
        android:text="Bill Details"
        android:textColor="@color/black"
        android:textSize="50dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/pimg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/bill"
        android:layout_marginTop="20dp"
        android:textSize="30dp" />
    <TextView
        android:id="@+id/pname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pimg"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:drawableStart="@drawable/cart_an"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/ru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pname"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/ruppe"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pname"

        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/ru"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/qt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pname"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/quantity"
        android:text="/qty  "
        android:textColor="@color/black"
        android:textSize="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:layout_below="@+id/pname"
        android:layout_toRightOf="@+id/price"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:id="@+id/quantity"/>

    <TextView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pname"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/qt"
        android:drawableStart="@drawable/mini_rs"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/opt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/total"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Payment Option"
        android:textColor="@color/blue"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/gpay"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_below="@+id/opt"
        android:layout_marginTop="10dp"
        android:src="@drawable/gpay" />

    <ImageView
        android:id="@+id/cod"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_below="@+id/opt"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/gpay"
        android:src="@drawable/home_an" />


</RelativeLayout>